<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.Messaging" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/tertiary</item>
        <item name="colorOnTertiary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Other app styling -->
        <item name="android:navigationBarColor">@color/primary</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Fix OpenGL swap behavior -->
        <item name="android:hardwareAccelerated">true</item>
        <item name="android:windowSwipeToDismiss">false</item>

        <!-- Default Button Style -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
    </style>

    <style name="Theme.Messaging" parent="Base.Theme.Messaging">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors (android:colorBackground is your app "skin") -->
        <item name="android:colorBackground">@color/app_background_light</item>
        <item name="colorSurface">@color/surface</item> <!-- surface can remain white or be
        app_background_light -->
        <item name="colorOnSurface">@color/text_primary</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Text appearance -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorTertiary">@color/text_tertiary</item>
        <item name="android:textColorHint">@color/text_disabled</item>

        <!-- Card styles -->
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardStrokeColor">@color/card_border</item> <!-- Ensure this attr is defined in
        attrs.xml -->


        <!-- Ripple effect -->
        <item name="colorControlHighlight">@color/ripple</item>
    </style>

    <!-- Custom Default Button Style -->
    <style name="Widget.App.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <!-- You can add more common button attributes here, like padding, corner radius etc. -->
        <!-- For example: <item
        name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Button</item> -->
    </style>

    <!-- Optional: Define a shape appearance for buttons if you want consistent corner rounding -->
